<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <!-- Màu nền -->
            <solid android:color="#E8E1F0" />

            <!-- Độ bo góc -->
            <corners android:radius="16dp" />

            <!-- Viền (tùy chọn) -->
            <stroke
                android:width="2dp"
                android:color="#061147" />
        </shape>
    </item>
</selector>
